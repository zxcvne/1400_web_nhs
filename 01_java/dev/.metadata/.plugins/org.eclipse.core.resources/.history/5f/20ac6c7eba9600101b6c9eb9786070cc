package calc;

import java.util.Scanner;

public class HexCalc {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		HexCalcController hc = new HexCalcController();
		
		
		while(true) {
			String menu = hc.choiceMenu(sc);
			
			if(menu.equals("y")) 
				hc.calc(sc);
			else if(menu.equals("n")) {
				System.out.println("종료"); break;
			}
			else
				System.out.println("error");
		}
			
		
		
	} // main

}

class HexCalcController {
	
	private String num1;
	private String num2;
	public String choiceMenu(Scanner sc) {
		System.out.println("HexCalc (y/n)");
		System.out.println(">");
		return sc.next();
	}
	
	public void calc(Scanner sc) {
		// TODO Auto-generated method stub
		num1 = sc.next();
		num2 = sc.next();
	}
	
	
	
}
