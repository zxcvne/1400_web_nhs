<script>
	function setCookie() {
		cookieValue = document.myForm.customer.value;
		console.log("customer : " + cookieValue);
		document.cookie = "customer=" + cookieValue + "; customer2=" + cookieValue;
	}
	function getCookie() {
		var cookies = document.cookie;
		console.log(cookies);
		console.log(cookies);
		var cookiedate = cookies.split(";");
	}
